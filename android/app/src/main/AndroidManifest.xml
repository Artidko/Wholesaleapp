<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- ========== PERMISSIONS (นอก <application>) ========== -->
    <!-- ตำแหน่งพื้นฐาน -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

    <!-- (ออปชัน) ติดตามตำแหน่งแบบพื้นหลังจริง ๆ ใส่เฉพาะ flow ที่จำเป็น -->
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION"/>

    <!-- ใช้ foreground service สำหรับ location (Android 10+) -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_LOCATION"/>

    <!-- Android 13+ ถ้าแสดงแจ้งเตือนระหว่างติดตามตำแหน่ง -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS"/>

    <!-- เครือข่าย (ส่วนมากมีอยู่แล้ว แต่ใส่ให้ชัด) -->
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <!-- (ออปชัน) ระบุว่าอุปกรณ์ไม่จำเป็นต้องมีกล่อง GPS ก็ได้ -->
    <uses-feature android:name="android.hardware.location.gps" android:required="false"/>

    <application
        android:label="flutter_application_2"
        android:name="${applicationName}"
        android:icon="@mipmap/ic_launcher">

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:taskAffinity=""
            android:theme="@style/LaunchTheme"
            android:configChanges="orientation|keyboardHidden|keyboard|screenSize|smallestScreenSize|locale|layoutDirection|fontScale|screenLayout|density|uiMode"
            android:hardwareAccelerated="true"
            android:windowSoftInputMode="adjustResize">

            <!-- ธีมเริ่มต้นขณะ Flutter กำลังบูต -->
            <meta-data
                android:name="io.flutter.embedding.android.NormalTheme"
                android:resource="@style/NormalTheme" />

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Flutter plugin registrant -->
        <meta-data
            android:name="flutterEmbedding"
            android:value="2" />

        <!-- (ออปชัน) ถ้าคุณใช้ FCM แสดง notification channel สามารถประกาศที่นี่ได้ -->
        <!-- <meta-data android:name="com.google.firebase.messaging.default_notification_channel_id"
                   android:value="rider_tracking_channel" /> -->

    </application>

    <!-- ========== QUERIES (package visibility) ========== -->
    <!-- สำหรับ ProcessTextPlugin ของ Flutter (คงไว้ตามเดิม) -->
    <queries>
        <intent>
            <action android:name="android.intent.action.PROCESS_TEXT" />
            <data android:mimeType="text/plain" />
        </intent>
    </queries>
</manifest>
